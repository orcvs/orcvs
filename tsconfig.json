{
	"compilerOptions": {
		"allowJs": true,
		"target": "ES2021",
		"lib": ["ES2021","DOM", "DOM.Iterable"],		
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"outDir": "dist",
		"sourceMap": true,
		"declaration": true,
		"strict": true,
		"rootDir": ".",
		"baseUrl": ".",
		"rootDirs": ["src", "tests"],
    "typeRoots": ["./node_modules/@types", "./src/types"]
	},
    "ts-node": {
        "esm": true
    },
    "include": [
        "src/**/*.ts", 
        "tests/**/*.ts"
    ],
	"exclude": ["node_modules/**"]
}